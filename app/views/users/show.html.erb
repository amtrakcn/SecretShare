<h1><%= @user.username %></h1>

<h2>Secrets</h2>
<ul id="secretsList">
  <% @user.received_secrets.each do |secret| %>
    <li>
      <%= secret.title %>
      <% unless secret.tags.empty? %>
        (<%= secret.tags.map(&:name).join(", ") %>)
      <% end %>
    </li>
  <% end %>
</ul>
<div>
  <%= render "/secrets/form" %>
</div>
